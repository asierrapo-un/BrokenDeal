<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ingunal.brokendeal.beta.controller.AsBajoMangaController"
            style="-fx-background-color: #0a0a0a;">

    <!-- Texto superior -->
    <top>
        <VBox alignment="CENTER" spacing="20" 
              style="-fx-padding: 100 20 10 20;">
            <Label fx:id="tituloLabel"
                   text="Selecciona una carta"
                   alignment="CENTER"
                   style="-fx-text-fill: white; 
                          -fx-font-size: 16px; 
                          -fx-font-weight: bold;"
                   BorderPane.alignment="CENTER"/>
        </VBox>
    </top>

    <!-- Cartas en el centro -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <HBox fx:id="cartasBox"
                  alignment="CENTER"
                  spacing="20"
                  style="-fx-padding: 20;">
            </HBox>
        </VBox>
    </center>

    <!-- Texto para continuar -->
    <bottom>
        <VBox alignment="CENTER" spacing="5" 
              style="-fx-padding: 0 20 40 20;">
            <Label fx:id="clickLabel"
                   text="Haz clic en cualquier lugar para continuar"
                   alignment="CENTER"
                   style="-fx-text-fill: white; 
                          -fx-font-size: 16px;
                          -fx-opacity: 0.8;"
                   BorderPane.alignment="CENTER"/>
        </VBox>
    </bottom>

</BorderPane>