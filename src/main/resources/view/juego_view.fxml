<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<StackPane fx:id="rootStackPane"
           xmlns="http://javafx.com/javafx/17.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ingunal.brokendeal.beta.controller.JuegoViewController"
           prefWidth="1024" prefHeight="720">

    <!-- Fondo dinámico (cambia según vida del jugador) -->
    <ImageView fx:id="fondoImageView"
               preserveRatio="false"
               fitWidth="1024" 
               fitHeight="720"
               smooth="false"/>

    <!-- Contenedor principal del juego -->
    <BorderPane>
        
        <!-- ============= ZONA SUPERIOR: DEALER ============= -->
        <top>
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-padding: 10 20 0 20;">
                
                <ImageView fx:id="vidaDealerImageView"
                           fitWidth="1024"
                           preserveRatio="false"
                           fitHeight="30"
                           smooth="false"/>
                
                <ImageView fx:id="dealerImageView"
                           fitWidth="400"
                           fitHeight="200"
                           preserveRatio="true"
                           smooth="false"/>
                
                <HBox fx:id="cartasDealerBox"
                      alignment="CENTER"
                      spacing="5"
                      style="-fx-padding: 10;" >
                </HBox>
                
            </VBox>
        </top>

        <!-- ============= ZONA INFERIOR: JUGADOR ============= -->
        <bottom>
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-padding: 0 20 10 20;">
                
                <HBox fx:id="cartasJugadorBox"
                      alignment="CENTER"
                      spacing="5"
                      style="-fx-padding: 10;">
                </HBox>
                
                <ImageView fx:id="vidaJugadorImageView"
                           fitWidth="1024"
                           preserveRatio="false"
                           fitHeight="30"
                           smooth="false"/>
                
            </VBox>
        </bottom>

        <!-- ============= BOTONES DE ACCIÓN (esquina inferior derecha) ============= -->
        <right>
            <VBox alignment="BOTTOM_RIGHT" spacing="15"
                  style="-fx-padding: 0 45 0 0;">
                
                <ImageView fx:id="botonSuperiorImageView"
                           fitWidth="120"
                           fitHeight="50"
                           preserveRatio="true"
                           smooth="false"
                           onMouseClicked="#onBotonSuperiorClicked"
                           style="-fx-cursor: hand;"/>
                
                <ImageView fx:id="botonInferiorImageView"
                           fitWidth="120"
                           fitHeight="50"
                           preserveRatio="true"
                           smooth="false"
                           onMouseClicked="#onBotonInferiorClicked"
                           style="-fx-cursor: hand;"/>
                
            </VBox>
        </right>

    </BorderPane>

</StackPane>