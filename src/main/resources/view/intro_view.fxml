<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ingunal.brokendeal.beta.controller.IntroController"
           style="-fx-background-color: black;">

    <children>

        <!-- Texto principal -->
        <VBox alignment="CENTER" spacing="40">
            <children>

                <Label fx:id="dialogueLabel"
                       wrapText="true"
                       textFill="white"
                       style="-fx-font-size: 18px; -fx-font-family: 'Consolas';"
                       maxWidth="700"
                       alignment="CENTER"/>

                <Label fx:id="continueLabel"
                       text="haz clic para continuar"
                       textFill="white"
                       opacity="0.8"
                       style="-fx-font-size: 16px; -fx-font-family: 'Consolas';"/>
            </children>
        </VBox>

    </children>
</StackPane>